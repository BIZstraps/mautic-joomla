<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="system" method="upgrade">
	<name>PLG_MAUTIC_NAME</name>
	<author>Mautic</author>
	<creationDate>October 2014</creationDate>
	<copyright>Copyright 2014 Mautic. All rights reserved.</copyright>
	<license>GNU/GPL</license>
	<authorEmail>extensions@mautic.org</authorEmail>
	<authorUrl>www.mautic.org</authorUrl>
	<version>1.0.0</version>
	<description>PLG_MAUTIC_DESC</description>
	<files>
		<folder>language</folder>
		<filename plugin="mautic">mautic.php</filename>
	</files>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="base_url" type="text" size="60" default=""
					label="PLG_MAUTIC_BASE_URL"
					description="PLG_MAUTIC_BASE_URL_DESC"
				/>
			</fieldset>
		</fields>
	</config>

	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_system_mautic.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_system_mautic.sys.ini</language>
	</languages>

	<updateservers>
		<server type="mautic" priority="1" name="Mautic Update Server at GitHub">https://escopecz.github.com/mautic-joomla</server>
	</updateservers>

</extension>
